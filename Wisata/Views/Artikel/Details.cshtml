@model Wisata.DataAccess.Models.Artikel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Artikel</h2>

<div class="col-lg-12">



    <div class="col-md-10">
        <h2 style="text-align:center">@Html.DisplayFor(model => model.Judul)</h2>
        <h5 style="text-align:center">
            <span class="glyphicon glyphicon-calendar"> @Model.Tanggal.ToLongDateString()</span>|
            <span class="glyphicon glyphicon-user"> @Model.Author</span>


        </h5>

        <hr />

        <div class="container">
            @Html.Raw(Model.Content)
        </div>

    </div>
</div>
<div class="row"></div>
<br/>
@if(Request.IsAuthenticated)
    {
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
}
