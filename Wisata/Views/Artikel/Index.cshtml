@model IEnumerable<Wisata.DataAccess.Models.Artikel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Artikel</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ObjekName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Judul)
        </th>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Tanggal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.ObjekID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ObjekName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Judul)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Tanggal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID },new { @class = "btn btn-warning" })  |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" }) 
        </td>
    </tr>
}

</table>
