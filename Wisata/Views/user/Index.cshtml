@model IEnumerable<Wisata.DataAccess.Models.user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Daftar User</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_User)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User)
        </td>
        <td>
           @if (item.Status == 0)
           { 
                <div>Not Active</div>
           }
           else
           {
            <div>Active</div>
           }
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new {  id=item.Id_User }, new { @class = "btn btn-danger" })
            @Html.ActionLink("Change Status", "Change", new { id = item.Id_User, status=@item.Status }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
