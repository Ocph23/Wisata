@model Wisata.DataAccess.Models.objek

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit Objeck Wisata</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Html.DisplayFor(model => model.Nama_Objek)</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ObjekID)

        <div class="form-group">
            @Html.LabelFor(model => model.KecamatanID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(O => O.KecamatanID, new SelectList(ViewBag.Kecamatans, "Id_Kecamatan", "nama_kecamatan"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KecamatanID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nama_Objek, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nama_Objek)
                @Html.ValidationMessageFor(model => model.Nama_Objek)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Jenis, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Jenis)
                @Html.ValidationMessageFor(model => model.Jenis)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lintang, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Lintang)
                @Html.ValidationMessageFor(model => model.Lintang)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Bujur, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bujur)
                @Html.ValidationMessageFor(model => model.Bujur)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <p> @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })</p>


</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
